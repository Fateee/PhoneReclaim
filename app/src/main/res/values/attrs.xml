<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SimpleCornerTextView">
        <attr name="bgColor" format="color"/>
        <attr name="borderColor" format="color"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="bottomRightRadius" format="dimension"/>
        <attr name="bottomLeftRadius" format="dimension"/>
        <attr name="topRightRadius" format="dimension"/>
        <attr name="topLeftRadius" format="dimension"/>
        <attr name="radius" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="setItemLayout">
        <attr name="bg" format="color|reference"/>
        <attr name="icon" format="reference"/>
        <attr name="title" format="string"/>
        <attr name="title_width" format="dimension"/>
        <attr name="title_color" format="color"/>
        <attr name="edit_hint" format="string|reference"/>
        <attr name="sub_title" format="string"/>
        <attr name="sub_title_code" format="string"/>
        <attr name="sub_title1" format="string"/>
        <attr name="is_show_switch" format="boolean"/>
        <attr name="show_switch_value" format="boolean"/>
        <attr name="show_arraw" format="boolean"/>
        <attr name="right_icon" format="reference"/>
        <attr name="hide_divider" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="titleView" >
        <attr name="lefticon" format="reference"/>
        <attr name="lefttitle" format="string"/>
        <attr name="toolbar_title" format="string|reference"/>
        <attr name="righticon" format="reference"/>
        <attr name="righttitle" format="string"/>
    </declare-styleable>
    <style name="base_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
</resources>
