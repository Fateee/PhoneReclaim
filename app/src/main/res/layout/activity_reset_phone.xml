<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ceeeeee"
              android:orientation="vertical">

    <com.yc.phonerecycle.widget.SimpleToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:toolbar_title="修改手机号"/>

    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/reset_pwd_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:title="手机号码"
            app:edit_hint="请输入新的手机号码"/>

    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/reset_pwd_vercode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="短信验证码"
            app:edit_hint="请输入收到的验证码"
            app:sub_title_code="获取验证码"/>
    <com.yc.phonerecycle.widget.SimpleCornerTextView
            android:id="@+id/card_submit"
            android:layout_width="match_parent" android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            app:bgColor="@color/c0168b7"
            app:radius="2.5dp"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"/>
</LinearLayout>
