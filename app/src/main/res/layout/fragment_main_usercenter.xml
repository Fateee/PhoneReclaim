<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cf7f8fa">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/ic_uc_avatar_bg">
            <TextView
                    android:id="@+id/uc_title"
                    android:layout_width="wrap_content"
                      android:layout_height="?attr/actionBarSize"
                      android:text="个人主页"
                      android:textColor="@color/white"
                      android:textSize="18sp"
                      android:layout_centerHorizontal="true"
                      android:gravity="center"/>
            <ImageView
                    android:id="@+id/iv_to_setlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_alignTop="@id/uc_title"
                    android:layout_alignBottom="@id/uc_title"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_setlist"/>
            <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo"/>
            <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/avatar"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="21dp"
                    android:drawableRight="@drawable/ic_edit"
                    android:drawablePadding="10dp"
                    android:text="小"
                    android:textColor="@color/c333333"
                    android:textSize="15sp"/>
            <TextView
                    android:id="@+id/item_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/c666666"
                    android:textSize="13sp"/>
        </RelativeLayout>
        <View
                android:layout_width="match_parent" android:layout_height="0.5dp"
                android:background="@color/ceeeeee"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="75dp"
                      android:background="@color/white">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                <TextView
                        android:id="@+id/item1_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/c333333"
                        android:textSize="16sp"/>
                <TextView
                        android:id="@+id/item1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="回收记录"
                        android:textColor="@color/c333333"
                        android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/my_wallet_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                <TextView
                        android:id="@+id/item2_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/c333333"
                        android:textSize="16sp"/>
                <TextView
                        android:id="@+id/item2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="钱包"
                        android:textColor="@color/c333333"
                        android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                <TextView
                        android:id="@+id/item3_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/c333333"
                        android:textSize="16sp"/>
                <TextView
                        android:id="@+id/item3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="检测记录"
                        android:textColor="@color/c333333"
                        android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:layout_width="match_parent" android:layout_height="0.5dp"
                android:background="@color/ceeeeee"/>

        <com.yc.phonerecycle.widget.SetItemLayout
                android:id="@+id/uc_bank_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:icon="@drawable/ic_uc_bank_card"
                app:title="卡包"/>
        <com.yc.phonerecycle.widget.SetItemLayout
                android:id="@+id/uc_shop_nearby"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:icon="@drawable/ic_uc_shop"
                app:title="附近商家"/>
        <com.yc.phonerecycle.widget.SetItemLayout
                android:id="@+id/uc_my_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                app:icon="@drawable/ic_uc_user"
                app:title="@string/my_user_count"
                app:hide_divider="true"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>