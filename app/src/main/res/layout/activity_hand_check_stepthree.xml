<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/common_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/cfafafa"
              android:orientation="vertical">

    <com.yc.phonerecycle.widget.SimpleToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:toolbar_title="继续回收"
    />
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <include
                    layout="@layout/header_hand_check_stepthree"/>
            <com.yc.phonerecycle.widget.SetItemLayout
                    android:id="@+id/phone_color"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:bg="@drawable/hand_check_bg"
                    app:title="机身颜色"
                    app:sub_title="请选择"
                    app:show_arraw="true"
                    app:hide_divider="true"/>

            <com.yc.phonerecycle.widget.SetItemLayout
                    android:id="@+id/fix_condition"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    app:bg="@drawable/hand_check_bg"
                    app:title="报修情况"
                    app:sub_title="请选择"
                    app:show_arraw="true"
                    app:hide_divider="true"/>
            <com.yc.phonerecycle.widget.SetItemLayout
                    android:id="@+id/surface"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    app:bg="@drawable/hand_check_bg"
                    app:title="外观情况"
                    app:sub_title="请选择"
                    app:show_arraw="true"
                    app:hide_divider="true"/>
            <com.yc.phonerecycle.widget.SetItemLayout
                    android:id="@+id/screen"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    app:bg="@drawable/hand_check_bg"
                    app:title="屏幕问题"
                    app:sub_title="请选择"
                    app:show_arraw="true"
                    app:hide_divider="true"/>
            <com.yc.phonerecycle.widget.SetItemLayout
                    android:id="@+id/overhaul"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    app:bg="@drawable/hand_check_bg"
                    app:title="拆修问题"
                    app:sub_title="请选择"
                    app:show_arraw="true"
                    app:hide_divider="true"/>
            <com.yc.phonerecycle.widget.SetItemLayout
                    android:id="@+id/in_water"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    app:bg="@drawable/hand_check_bg"
                    app:title="有无进水"
                    app:sub_title="请选择"
                    app:show_arraw="true"
                    app:hide_divider="true"/>

            <EditText
                    android:id="@+id/feedback_edit"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:gravity="top"
                    android:background="@drawable/hand_check_bg"
                    android:hint="请描述其他故障(选填)"
                    android:textColorHint="@color/c999999"
                    android:textSize="15sp"/>

            <com.yc.phonerecycle.widget.SimpleCornerTextView
                    android:id="@+id/appraisal"
                    android:layout_width="match_parent" android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    app:bgColor="@color/c0168b7"
                    app:radius="2.5dp"
                    android:text="估价回收"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
