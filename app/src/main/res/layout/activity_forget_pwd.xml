<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/ceeeeee"
            android:orientation="vertical">

    <!--<include-->
        <!--layout="@layout/titleview"/>-->
    <com.yc.phonerecycle.widget.SimpleToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:toolbar_title="修改密码"
            app:righttitle="完成"
    />
    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/reset_pwd_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:title="手机号码"
            app:edit_hint="请输入手机号码"
            app:edit_type="number"/>

    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/reset_pwd_vercode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="短信验证码"
            app:edit_hint="请输入验证码"
            app:sub_title_code="获取验证码"
            app:edit_type="char_num"/>
    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/reset_pwd_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="新的登录密码"
            app:title_width="120dp"
            app:edit_hint="请输入密码"
            app:hide_divider="true"
            app:is_show_switch="true"
            app:edit_type="char_num"/>
</LinearLayout>
