<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_marginLeft="35dp"
              android:layout_marginRight="35dp"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hand_check_bg"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="请输入提现密码"
                android:textColor="#000000"
                android:padding="10dp"
                android:textSize="16sp"/>

        <com.yc.phonerecycle.widget.PasswordInputView
                android:id="@+id/input_view"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="39dp"
                android:layout_marginRight="39dp"
                android:background="@null"
                android:cursorVisible="false"
                android:inputType="number"
                android:maxLength="6"
                app:pivBorderColor="@color/ce0e0e0"
                app:pivBorderRadius="2.5dp"
                app:pivBorderWidth="1dp"
                app:pivPasswordColor="@color/black"
                app:pivPasswordLength="6"
                app:pivPasswordWidth="5dp"
        />

        <com.yc.phonerecycle.widget.SimpleCornerTextView
                android:id="@+id/dialog_password_layout_TV_sure"
                android:layout_width="match_parent" android:layout_height="44dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                app:bgColor="@color/c0168b7"
                app:radius="5dp"
                android:text="确认"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:gravity="center"/>

        <!--<TextView-->
        <!--android:id="@+id/dialog_password_layout_TV_sure"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="确定"-->
        <!--android:textColor="#000000"-->
        <!--android:padding="10dp"-->
        <!--android:textSize="16sp"-->
        <!--android:layout_alignParentRight="true"/>-->
    </LinearLayout>

    <ImageView
            android:id="@+id/dialog_password_layout_TV_cancle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="15dp"
            android:src="@drawable/ic_dialog_close"/>
</LinearLayout>