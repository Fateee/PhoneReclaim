<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ceeeeee"
              android:orientation="vertical">

    <!--<include-->
    <!--layout="@layout/titleview"/>-->
    <com.yc.phonerecycle.widget.SimpleToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:toolbar_title="修改密码"
    />
    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/reset_pwd_old"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:title="旧密码"
            app:edit_hint="请输入旧密码"
            app:edit_type="char_num"/>

    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/reset_pwd_new"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="新密码"
            app:edit_hint="请输入新密码(6至20位数字或字母)"
            app:edit_type="char_num"/>
    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/reset_pwd_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="确认密码"
            app:edit_hint="请再次输入新密码"
            app:hide_divider="true"
            app:edit_type="char_num"/>

    <com.yc.phonerecycle.widget.SimpleCornerTextView
            android:id="@+id/submit"
            android:layout_width="match_parent" android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            app:bgColor="@color/c0168b7"
            app:radius="2.5dp"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"/>
</LinearLayout>
