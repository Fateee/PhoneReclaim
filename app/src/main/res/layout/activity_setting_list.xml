<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ceeeeee"
              android:orientation="vertical">

    <!--<include-->
    <!--layout="@layout/titleview"/>-->
    <com.yc.phonerecycle.widget.SimpleToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:toolbar_title="设置"
    />
    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/setlist_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:title="手机号码"
            app:sub_title="13311112222"
            app:sub_title1="更换"
            app:show_arraw="true"
            app:hide_divider="true"/>

    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/setlist_pwd_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:title="修改密码"
            app:show_arraw="true"
            app:hide_divider="true"/>
    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/setlist_bankpwd_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="提现密码"
            app:show_arraw="true"/>
    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/setlist_cache_clear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:title="清理缓存"
            app:sub_title="240M"
            app:show_arraw="true"/>
    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/setlist_feedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="用户反馈"
            app:show_arraw="true"/>
    <com.yc.phonerecycle.widget.SetItemLayout
            android:id="@+id/setlist_about_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="关于我们"
            app:hide_divider="true"
            app:show_arraw="true"/>
    <com.yc.phonerecycle.widget.SimpleCornerTextView
            android:id="@+id/setlist_logout"
            android:layout_width="match_parent" android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            app:bgColor="@color/c0168b7"
            app:radius="2.5dp"
            android:text="退出登录"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"/>
</LinearLayout>
