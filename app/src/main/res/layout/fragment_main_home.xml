<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cf7f8fa">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_main_home">
        </ImageView>
        <TextView
                android:id="@+id/title_home"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:text="首页"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>
        <RelativeLayout
                android:id="@+id/header_one"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/title_home">
            <com.yc.phonerecycle.widget.SimpleCornerTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:bgColor="@color/white"
                    app:radius="15dp"/>
            <ImageView
                    android:id="@+id/home_header_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/logo_bg"
                    android:padding="18dp"
                    android:src="@drawable/android_logo"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/home_header_logo"
                    android:layout_alignTop="@id/home_header_logo"
                    android:layout_alignBottom="@id/home_header_logo"
                    android:paddingLeft="25dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="你的手机"
                        android:textStyle="bold"
                        android:textColor="@color/c333333"
                        android:textSize="16sp"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp">
                    <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@color/c3f80d3"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="型号"
                            android:textColor="@color/c5b5b5b"
                            android:textSize="13sp"/>
                    <TextView
                            android:id="@+id/phone_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/c8e8e8e"
                            android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp">
                    <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@color/cdf9088"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="内存"
                            android:textColor="@color/c5b5b5b"
                            android:textSize="13sp"/>
                    <TextView
                            android:id="@+id/phone_storage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/c8e8e8e"
                            android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/header_one">
            <com.yc.phonerecycle.widget.SimpleCornerTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/header_two"
                    android:layout_alignBottom="@id/header_two"
                    app:bgColor="@color/white"
                    app:radius="15dp"/>
            <LinearLayout
                    android:id="@+id/header_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="26dp"
                    android:layout_marginBottom="27dp"
                    android:elevation="6dp"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="品牌"
                            android:textColor="@color/c333333"
                            android:textSize="13sp"/>
                    <TextView
                            android:id="@+id/pingpai_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"

                            android:textColor="@color/c666666"
                            android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="型号"
                            android:textColor="@color/c333333"
                            android:textSize="13sp"/>
                    <TextView
                            android:id="@+id/model_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"

                            android:textColor="@color/c666666"
                            android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="内存"
                            android:textColor="@color/c333333"
                            android:textSize="13sp"/>
                    <TextView
                            android:id="@+id/storage_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"

                            android:textColor="@color/c666666"
                            android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="IMEI号"
                            android:textColor="@color/c333333"
                            android:textSize="13sp"/>
                    <TextView
                            android:id="@+id/imei_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"

                            android:textColor="@color/c666666"
                            android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="系统版本"
                            android:textColor="@color/c333333"
                            android:textSize="13sp"/>
                    <TextView
                            android:id="@+id/os_version"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"

                            android:textColor="@color/c666666"
                            android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="蓝牙地址"
                            android:textColor="@color/c333333"
                            android:textSize="13sp"/>
                    <TextView
                            android:id="@+id/bluetooth_mac"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"

                            android:textColor="@color/c666666"
                            android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="无线局域网地址"
                            android:textColor="@color/c333333"
                            android:textSize="13sp"/>
                    <TextView
                            android:id="@+id/wifi_mac"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"

                            android:textColor="@color/c666666"
                            android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:text="硬件"
                            android:textColor="@color/c333333"
                            android:textSize="13sp"/>
                    <TextView
                            android:id="@+id/to_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="查看详情"
                            android:textColor="@color/c0168b7"
                            android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:gravity="center_horizontal">
                    <com.yc.phonerecycle.widget.SimpleCornerTextView
                            android:id="@+id/hand_check"
                            android:layout_width="120dp" android:layout_height="40dp"
                            app:bgColor="@color/white"
                            app:radius="20dp"
                            android:text="手动评估"
                            android:textSize="14sp"
                            android:textColor="@color/c666666"
                            android:gravity="center"
                            app:borderColor="@color/cbbbbbb"
                            app:borderWidth="0.5dp"/>
                    <com.yc.phonerecycle.widget.SimpleCornerTextView
                            android:id="@+id/auto_check"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            app:bgColor="@color/c0168b7"
                            app:radius="20dp"
                            android:text="一键评估"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
