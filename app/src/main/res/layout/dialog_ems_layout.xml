<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_marginLeft="35dp"
              android:layout_marginRight="35dp"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hand_check_bg"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:text="快递公司"
                android:textColor="#000000"
                android:textSize="16sp"/>

        <EditText
                android:id="@+id/ems_company_et"
                android:layout_width="match_parent" android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/search_edit_bg"
                android:paddingLeft="15dp"
                android:drawablePadding="10dp"
                android:hint="请输入快递公司名称"
                android:textSize="14sp"
                android:textColorHint="@color/c999999"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:text="快递单号"
                android:textColor="#000000"
                android:textSize="16sp"/>

        <EditText
                android:id="@+id/ems_num_et"
                android:layout_width="match_parent" android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/search_edit_bg"
                android:paddingLeft="15dp"
                android:drawablePadding="10dp"
                android:hint="请输入快递单号"
                android:textSize="14sp"
                android:textColorHint="@color/c999999"/>
        <com.yc.phonerecycle.widget.SimpleCornerTextView
                android:id="@+id/dialog_password_layout_TV_sure"
                android:layout_width="match_parent" android:layout_height="44dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                app:bgColor="@color/c0168b7"
                app:radius="5dp"
                android:text="确认"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:gravity="center"/>

    </LinearLayout>

    <ImageView
            android:id="@+id/dialog_password_layout_TV_cancle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="15dp"
            android:src="@drawable/ic_dialog_close"/>
</LinearLayout>